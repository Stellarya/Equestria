{% extends "base.html.twig" %}

{% block contenu %}
    <div id="conteneurModale"></div>
    <div class="container-fluid">
        <div class="box mt-2 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>{{ title }}</h2>
                <a href="{{ path('effectifs_add') }}" class="btn btn-secondary btn-round">
                    <i class="fas fa-user"></i>
                    <span>Ajouter une personne</span>
                </a>
            </div>
            <table class="table table-striped table-hover"
                   id="tblPersonne" width="100%">
                <thead>
                <tr>
                    <th class="d-none">ID</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Age</th>
                    <th>Adresse</th>
                    <th>CP</th>
                    <th>Ville</th>
                    <th>Cavalier</th>
                    <th>Proprietaire</th>
                </tr>
                </thead>
                <tbody>
                {% for personne in personnes %}
                    <tr>
                        <td class="d-none">{{ personne.id }}</td>
                        <td>{{ personne.prenom }}</td>
                        <td>{{ personne.nom }}</td>
                        <td>{{ date('now').diff((date(personne.dateNaissance))).format('%y ans') }}</td>
                        <td>{{ personne.adresse }}</td>
                        <td>{{ personne.codePostal }}</td>
                        <td>{{ personne.ville }}</td>
                        <td><i class="fas {% if personne.estCavalier %} fa-check {% else %} fa-times {% endif %}"></i></td>
                        <td><i class="fas {% if personne.estProprietaire %} fa-check {% else %} fa-times {% endif %}"></i></td>
                    </tr>
                {% endfor %}
                <tr></tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let countClick = 0;

    </script>
{% endblock %}
