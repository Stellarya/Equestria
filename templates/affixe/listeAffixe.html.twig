<div id="conteneurModale"></div>
<div class="container-fluid">
    <div class="box mt-2 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>{{ title }}</h2>
            <a href="{{ path('affixe_add') }}" class="btn btn-secondary btn-round">
                <i class="fas fa-id-badge"></i>
                <span>Ajouter Affixe</span>
            </a>
        </div>
        <table class="table table-striped table-hover"
               id="tblAffixe" width="100%">
            <thead>
            <tr>
                <th class="d-none">ID</th>
                <th>Nom d'affixe</th>
                <th>Race</th>
            </tr>
            </thead>
            <tbody>
            {% for affixe in affixes %}
                <tr>
                    <td class="d-none">{{ affixe.id }}</td>
                    <td>{{ affixe.libelle }}</td>
                    <td>{{ affixe.race.libelle }}</td>
                </tr>
            {% endfor %}
            <tr></tr>
            </tbody>
        </table>
    </div>
</div>
