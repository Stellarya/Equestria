{% extends 'base.html.twig' %}
{% block contenu %}
    <div class="container-fluid">
        <h2>{{ title }}</h2>
        {% import 'macros/layout.html.twig' as macros %}
        <div class="box mt-2 mt-md-0 p-4">
            <div class="d-flex justify-content-end">
                {{ macros.addButton('ajouterCertification') }}
            </div>
            <table class="table table-striped table-hover"
                   id="tblChevaux" width="100%">
                <thead>
                <tr>
                    <th class="d-none">ID</th>
                    <th>Nom</th>
                    <th>Affixe</th>
                    <th>Sexe</th>
                    <th>Robe</th>
                    <th>Race</th>
                    <th>Pure Race</th>
                    <th>Poids</th>
                    <th>Taille</th>
                </tr>
                </thead>
                <tbody>
                {% for cheval in chevaux %}
                <tr>
                    <td class="d-none">{{ cheval.id }}</td>
                    <td>{{ cheval.nom }}</td>
                    <td>{{ cheval.affixe }}</td>
                    <td><i class="{{ sexe }}"></i></td>
                    <td>{{ robe }}</td>
                    <td>{{ race }}</td>
                    <td><i class="{{ isPureRace }}"></i></td>
                    <td>{{ cheval.poids }}</td>
                    <td>{{ cheval.taille }}</td>
                </tr>
                {% endfor %}
                <tr></tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    </script>
{% endblock %}