{% extends "base.html.twig" %}

{% block contenu %}
    <div class="row tab-content">
        <div class="col-sm-12 col-md-4 col-lg-3">
            <!-- Fiche dÃ©tails -->
            <div class="box overflow-auto">
                <div class="box-header box-separate">
                    <h3 class="box-title text-truncate">{{ cheval.nom ~' '~ cheval.affixe.libelle }}</h3>
                </div>

                <div class="box_content text-center">
                    <img class="img-thumbnail mt-2"
                            {% if cheval.race.typeRace.id == 2 %}
                        src="{{ asset('/img/cheval.png') }}" alt="cheval" title="cheval"
                    {% else %}
                        src="{{ asset('/img/poney.png') }}" alt="poney" title="poney"
                            {% endif %}>
                    <div class="mt-2">
                        Race : {{ race }}
                    </div>
                    <div class="mt-2">
                        Robe : {{ robe }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
