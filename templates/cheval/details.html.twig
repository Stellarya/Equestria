{% extends "base.html.twig" %}

{% block contenu %}
    <div class="row tab-content">
        <div class="col-sm-12 col-md-4 col-lg-3">
            <!-- Fiche détails -->
            <div class="box overflow-auto p-3">
                <div class="box-header box-separate">
                    <h3 class="box-title text-truncate">{{ cheval.nom ~' '~ cheval.affixe.libelle }}</h3>
                </div>

                <div class="box_content text-center">
                    <img class="img-thumbnail mt-2"
                            {% if cheval.race.typeRace.id == 2 %}
                        src="{{ asset('/img/cheval.png') }}" alt="cheval" title="cheval"
                    {% else %}
                        src="{{ asset('/img/poney.png') }}" alt="poney" title="poney"
                            {% endif %}>
                    <div class="mt-2">
                        Race : {{ race }}
                    </div>
                    <div class="mt-2">
                        Robe : {{ robe }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /Fiche Détails -->
        <div class="col-sm-12 col-md-8 col-lg-9">
            <div class="box mt-2 mt-md-0">
                <div class="tab-content p-0 w-100">
                    {% import 'macros/layout.html.twig' as macros %}
                    <ul class="nav nav-tabs flex-fill" id="nav_tdb">
                        {{ macros.navItemTabs('fas fa-venus-mars', 'Reproduction', 'listeReproducteur', ''  ) }}
                        {{ macros.navItemTabs('fas fa-venus-mars', 'Naissances', 'listeNaissance', ''  ) }}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="listeCheval">

            </div>
            <div class="tab-pane fade" id="ajouter">

            </div>
        </div>
    </div>
{% endblock %}
