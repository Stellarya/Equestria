{% extends 'base.html.twig' %}
{% block contenu %}
    <h3 class="mt-2 ml-4">Inscription</h3>
    <div class="ml-4 mr-4">
        {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
        {{ form_errors(form) }}
        <div class="form-group mb-3 ml-auto mr-auto row">
            <label class="col-1 col-form-label" for="pseudo">Username
                <span class="required">*</span>
            </label>
            <div class="col-4">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group mb-3 ml-auto mr-auto row">
            <label class="col-1 col-form-label" for="mail">Email
                <span class="required">*</span>
            </label>
            <div class="col-4">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group mb-3 ml-auto mr-auto row">
            <label class="col-1 col-form-label" for="password">Password
                <span class="required">*</span>
            </label>
            <div class="col-4">
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="d-flex justify-content-center w-100 d-none d-sm-flex mt-4">
            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-success'} }) }}
            {{ form_rest(form) }}
        </div>
    </div>
{% endblock %}